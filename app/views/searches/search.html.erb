<% if @range == "User" %>
 <h2>Users search for "<%= @word %>"</h2>
<% else %>
 <h2>Books search for "<%= @word %>"</h2>
<% end %>
 <table class='table table-hover table-inverse'>
   <% if @range == "User" %>
   <thead>
     <tr>
       <th></th>
       <th>name</th>
       <th>introduction</th>
     </tr>
   </thead>
   <tbody>
     <% @users.each do |user| %>
     <tr>
       <td><%= image_tag user.get_profile_image, size:'100x100' %></td>
       <td><%= link_to user.name, user_path(user.id) %></td>
       <td><%= user.introduction %></td>
     <% end %>
     </tr>
   </tbody>
   <% else %>
   <thead>
     <tr>
       <th></th>
       <th>title</th>
       <th>opinion</th>
     </tr>
   </thead>
   <tbody>
     <% @books.each do |book| %>
     <tr>
       <td><%= image_tag book.user.get_profile_image, size:'100x100' %></td>
       <td><%= link_to book.title, book %></td>
       <td><%= book.body %></td>
     <% end %>
     </tr>
   </tbody>
   <% end %>
 </table>